<?xml version="1.0" encoding="utf-8"?>
<form
    addrulepath="/administrator/components/com_student/models/rules"
    >
    <fieldset
				name="details"
				label="STUDENT_DETAILS"
	>
		<field
				name="id"
				type="hidden"
				/>
		<field
				name="fullname"
				type="text"
				label="Full Name"
				description="Full Name"
				size="40"
				class="inputbox"
				validate="fullname"
				required="true"
                hint="Full Name"
				default=""
				/>
        <field
				name="email"
				type="text"
				label="Email"
				description="Email"
				size="40"
				class="inputbox"
				required="true"
                hint="Email"
				default=""
				/>
          
    </fieldset>
</form>